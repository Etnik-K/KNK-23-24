            <Font name="System Bold" size="12.0" />
         </font>
      </ToggleButton>
      <ImageView fx:id="imgLanguage" fitHeight="19.0" fitWidth="19.0" layoutX="716.0" layoutY="17.0" onMouseClicked="#handleLanguageClick" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/language.png" />
         </image>
      </ImageView>
      <Button layoutX="650.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleHelp" style="-fx-background-color: #711005;" text="Help" textFill="WHITE" />
   </children>
