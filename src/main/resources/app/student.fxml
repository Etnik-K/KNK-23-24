         <image>
            <Image url="@../images/University_of_Prishtina_logo.png" />
         </image>
      </ImageView>
      <ImageView fx:id="Logout" fitHeight="26.0" fitWidth="26.0" layoutX="749.0" layoutY="13.0" onMouseClicked="#handleLogOut" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logout.png" />
         </image>
      </ImageView>
      <Button fx:id="btnTuesday" layoutX="225.0" layoutY="65.0" mnemonicParsing="false" onAction="#handleTuesday" prefHeight="28.0" prefWidth="133.0" style="-fx-background-color: #E6B0B0;" text="\%btnTuesday" />
      <Button fx:id="btnWednesday" layoutX="363.0" layoutY="66.0" mnemonicParsing="false" onAction="#handleWednesday" prefHeight="28.0" prefWidth="158.0" style="-fx-background-color: #E6B0B0;" text="\%btnWednesday" />
      <Button fx:id="btnThursday" layoutX="527.0" layoutY="66.0" mnemonicParsing="false" onAction="#handleThursday" prefHeight="28.0" prefWidth="133.0" style="-fx-background-color: #E6B0B0;" text="\%btnThursday" />
      <Button fx:id="btnFriday" layoutX="667.0" layoutY="66.0" mnemonicParsing="false" onAction="#handleFriday" prefHeight="28.0" prefWidth="117.0" style="-fx-background-color: #E6B0B0;" text="\%btnFriday" />
      <Button fx:id="btnMonday" layoutX="79.0" layoutY="66.0" mnemonicParsing="false" onAction="#handleMonday" prefHeight="26.0" prefWidth="139.0" style="-fx-background-color: #E6B0B0;" text="\%btnMonday" />
      <Pane fx:id="adminPane" layoutX="-2.0" layoutY="106.0" prefHeight="394.0" prefWidth="800.0" style="-fx-background-color: #a6a6a6;">
