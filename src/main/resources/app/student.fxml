<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StudentController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#84160d" height="56.0" layoutX="-1.0" layoutY="-2.0" stroke="#84160d" strokeType="INSIDE" width="800.0" />
